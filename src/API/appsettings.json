{
  "TenantId": "",
  "SeedData": false,
  "IsLocalServer": false,
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting": "Information",
      "Microsoft.AspNetCore.Routing": "Information",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Microsoft.AspNetCore.Authorization": "Debug"
    },
    "NLog": {
      "IncludeScopes": true,
      "RemoveLoggerFactoryFilter": true
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Redis": "localhost:6379,password=YOUR_REDIS_PASSWORD"  // ⚠️ 请在环境变量或用户机密中配置真实密码
  },
  "MongoDb": {
    "ConnectionString": "mongodb://localhost:27017/NextAdmin",  // ⚠️ 请在环境变量或用户机密中配置真实连接字符串
    "DatabaseName": "NextAdmin"
  },
  "Jwt": {
    "SecretKey": "PLEASE_CHANGE_THIS_SECRET_KEY_TO_AT_LEAST_32_CHARACTERS!",  // ⚠️ 请在环境变量或用户机密中配置真实密钥
    "Issuer": "NextAdmin",
    "Audience": "NextAdminUsers",
    "ExpirationInMinutes": 10080,
    "VerifyCaptcha": false
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:8080",
      "http://localhost:5000",
      "http://localhost:5001",
      "http://localhost:5173",
      "http://localhost"
    ]
  },
  "SignalR": {
    "HubOptions": {
      "EnableDetailedErrors": true,
      "ClientTimeoutInterval": 30,
      "KeepAliveInterval": 15,
      "HandshakeTimeout": 15,
      "MaximumParallelInvocationsPerClient": 1
    },
    "VehicleTracking": {
      "UpdateIntervalSeconds": 1
    }
  },
  "Performance": {
    "WarningThresholdMs": 1000
  },
  "Cache": {
    "DefaultDurationSeconds": 300
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "DefaultDatabase": 0,
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000,
    "CommandTimeout": 5000,
    "AsyncTimeout": 5000,
    "DefaultExpiry": "00:30:00",
    "ConfigCheckSeconds": 60,
    "UseSsl": false,
    "Password": "YOUR_REDIS_PASSWORD",  // ⚠️ 请在环境变量或用户机密中配置真实密码
    "ClientName": "NextAdmin",
    "Version": "6.0"
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "${basedir}/logs/${date:format=yyyy-MM-dd_HH}.log",
        "layout": "${longdate}|${level:uppercase=true}|${message} ${exception:format=tostring}"
      },
      "logconsole": {
        "type": "Console",
        "layout": "${longdate}|${level:uppercase=true}| ${message} ${exception:format=tostring}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  },
  "LogSettings": {
    "EnableGatewayLog": true,
    "EnableDeviceLog": true,
    "EnableHeartbeatLog": true,
    "EnableMonitoringLog": true,
    "EnableLoadBalancerLog": true,
    "EnableConnectionPoolLog": true
  }
}